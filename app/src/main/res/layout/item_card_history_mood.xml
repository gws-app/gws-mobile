<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Left Section: Emoji and Mood -->
        <ImageView
            android:id="@+id/emoji_mood"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/okegpp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_mood_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bliss"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/emoji_mood"
            app:layout_constraintStart_toStartOf="@id/emoji_mood"
            app:layout_constraintEnd_toEndOf="@id/emoji_mood" />

        <!-- Center Section: Date, Logs, Voice Notes, Notes -->

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WED, DEC 24, 10:30 AM MST"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="@id/center_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_log_activities"
            android:layout_width="204dp"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            android:text="Logged Activities: Meditation, Reading"
            app:layout_constraintStart_toStartOf="@id/center_guideline"
            app:layout_constraintTop_toBottomOf="@id/text_date" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_voice_notes"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_log_activities"
            app:layout_constraintStart_toStartOf="@id/center_guideline"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:45" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_play_circle_24" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Catatan: Aku ingin pentol"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_voice_notes"
            app:layout_constraintStart_toStartOf="@id/center_guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Vertical Guideline to center content -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.29551452" />

        <!-- Right Section: Dropdown Menu -->
        <ImageButton
            android:id="@+id/button_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_horiz_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>